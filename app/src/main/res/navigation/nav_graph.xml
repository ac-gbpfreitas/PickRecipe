<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ListFragment">

    <fragment
        android:id="@+id/ListFragment"
        android:name="com.example.pickrecipe.fragment.list.ListFragmentRecipe"
        android:label="@string/fragmentList"
        tools:layout="@layout/fragment_list_recipe">
        <action
            android:id="@+id/action_ListFragment_to_DetailsFragmentRecipe"
            app:destination="@id/DetailsFragmentRecipe" />
    </fragment>

    <fragment
        android:id="@+id/DetailsFragmentRecipe"
        android:name="com.example.pickrecipe.fragment.DetailsFragmentRecipe"
        android:label="Recipe Details"
        tools:layout="@layout/fragment_details_recipe" >
        <action
            android:id="@+id/action_DetailsFragment_to_ListFragment"
            app:destination="@id/ListFragment" />
    </fragment>
</navigation>